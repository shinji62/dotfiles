# ====================================
# Alias
# ====================================

# show with color
alias ls="ls --color"

# show description of files
alias ll="ls -l --color"

# show with hidden files
alias la="ls -A --color"

# show directory with /, executable file with *,
# simbolic link with @
alias lf="ls -F --color"

# ------------------------------------
# Rmtrash
# ------------------------------------
alias rm='rmtrash'
alias rr='rmtrash *~'



# ------------------------------------
#  GVM
# ------------------------------------

# ------------------------------------
# Packer
# ------------------------------------
export PATH=$PATH:~/bin/packer/
