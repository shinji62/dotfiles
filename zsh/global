# ====================================
# PATH
# ====================================

# ------------------------------------
# General
# ------------------------------------
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin
export PATH=$(brew --prefix coreutils)/libexec/gnubin:$PATH
export PATH=$PATH:~/bin

# ====================================
# ENVIRONMENT
# ====================================

# ------------------------------------
# LANGUAGE
# ------------------------------------
export LANG=ja_JP.UTF-8

# ------------------------------------
# EDITOR
# ------------------------------------
export EDITOR='nano'

# ====================================
# Language
# ====================================

# ------------------------------------
# Ruby
# ------------------------------------
if [ -d ~/.rbenv ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init - zsh)"
fi

# ------------------------------------
# Go
# ------------------------------------
if [ -d ~/.gvm ]; then
  source "$HOME/.gvm/scripts/gvm"
  gvm use go1.4
fi

export GOPATH=${HOME}
export PATH=$PATH:~/bin

# For godoc
export GOROOT=`go env GOROOT`
export PATH=$PATH:$GOROOT/bin

# ------------------------------------
# node.js
# ------------------------------------

# Version management (nodebrew)
if [[ -f ~/.nodebrew/nodebrew ]]; then
    export PATH=$HOME/.nodebrew/current/bin:$PATH
    nodebrew use stable
fi


# ====================================
# TOOL
# ====================================

# ------------------------------------
# bosh
# ------------------------------------

if [[ -f ~/cf-gwenn/bosh/bin/bosh ]]; then
       export PATH=$HOME/cf-gwenn/bosh/bin:$PATH
fi

if [[ -f ~/cf-gwenn/bosh-lite/bin/add-route ]]; then
       sudo ~/cf-gwenn/bosh-lite/bin/add-route
fi

#bosh-lite
export no_proxy=192.168.50.4
export NO_PROXY=192.168.50.4


# ------------------------------------
# z
# ------------------------------------
if [[ -d ~/.zjump ]]; then
   _Z_CMD=j
   source "$HOME/.zjump/z.sh"
fi

# ------------------------------------
# Tmux-power-line
# ------------------------------------
PS1="$PS1"'$([ -n "$TMUX" ] && tmux setenv TMUXPWD_$(tmux display -p "#D" | tr -d %) "$PWD")'

# ------------------------------------
# direnv
# ------------------------------------
eval "$(direnv hook zsh)"
